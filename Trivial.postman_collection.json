{
  "info": {
    "name": "Trivial NestJS API",
    "description": "Colección de endpoints para el juego Trivial con autenticación JWT",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@ejemplo.com\",\n  \"password\": \"password123\",\n  \"username\": \"usuario1\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"usuario@ejemplo.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Make Admin",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ejemplo.com\",\n  \"secretKey\": \"make_me_admin_2024\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/make-admin",
              "host": ["{{base_url}}"],
              "path": ["auth", "make-admin"]
            }
          }
        }
      ]
    },
    {
      "name": "Trivial",
      "item": [
        {
          "name": "Get Random Question",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/trivial/question",
              "host": ["{{base_url}}"],
              "path": ["trivial", "question"]
            }
          }
        },
        {
          "name": "Get Question by Difficulty",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/trivial/question?difficulty=easy",
              "host": ["{{base_url}}"],
              "path": ["trivial", "question"],
              "query": [
                {
                  "key": "difficulty",
                  "value": "easy"
                }
              ]
            }
          }
        },
        {
          "name": "Submit Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"questionId\": \"QUESTION_ID_HERE\",\n  \"selectedOption\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/trivial/answer",
              "host": ["{{base_url}}"],
              "path": ["trivial", "answer"]
            }
          }
        },
        {
          "name": "Get Score",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/trivial/score",
              "host": ["{{base_url}}"],
              "path": ["trivial", "score"]
            }
          }
        },
        {
          "name": "Reset Score",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/trivial/reset",
              "host": ["{{base_url}}"],
              "path": ["trivial", "reset"]
            }
          }
        },
        {
          "name": "Get History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/trivial/history",
              "host": ["{{base_url}}"],
              "path": ["trivial", "history"]
            }
          }
        }
      ]
    },
    {
      "name": "Questions (ADMIN)",
      "item": [
        {
          "name": "Get All Questions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/questions",
              "host": ["{{base_url}}"],
              "path": ["questions"]
            }
          }
        },
        {
          "name": "Get Questions by Difficulty",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/questions?difficulty=medium",
              "host": ["{{base_url}}"],
              "path": ["questions"],
              "query": [
                {
                  "key": "difficulty",
                  "value": "medium"
                }
              ]
            }
          }
        },
        {
          "name": "Create Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"statement\": \"¿Cuál es el océano más grande del mundo?\",\n  \"options\": [\n    { \"index\": 0, \"text\": \"Océano Pacífico\" },\n    { \"index\": 1, \"text\": \"Océano Atlántico\" },\n    { \"index\": 2, \"text\": \"Océano Índico\" },\n    { \"index\": 3, \"text\": \"Océano Ártico\" }\n  ],\n  \"answerIndex\": 0,\n  \"difficulty\": \"easy\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/questions",
              "host": ["{{base_url}}"],
              "path": ["questions"]
            }
          }
        },
        {
          "name": "Update Question",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"statement\": \"Pregunta actualizada\",\n  \"difficulty\": \"hard\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/questions/QUESTION_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["questions", "QUESTION_ID_HERE"]
            }
          }
        },
        {
          "name": "Delete Question",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/questions/QUESTION_ID_HERE",
              "host": ["{{base_url}}"],
              "path": ["questions", "QUESTION_ID_HERE"]
            }
          }
        }
      ]
    }
  ]
}
